<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

    <bean id="carSpec" class="car.constructor.injection.Specification">

        <property name="make" value="ford"/>
        <property name="model" value="mustang"/>


    </bean>

    <bean id="myCar" class="car.constructor.injection.Car" autowire="byName">
            <constructor-arg ref="carSpec"/>
    </bean>


</beans>